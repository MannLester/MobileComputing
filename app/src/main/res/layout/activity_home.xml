<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_bg"/>

    <ImageView
        android:id="@+id/background_dark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dark_home_bg"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageButton
        android:layout_width="188dp"
        android:layout_height="60dp"
        android:alpha="0.6"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player_name"
        android:layout_width="181dp"
        android:layout_height="61dp"
        android:layout_marginStart="8sp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:fontFamily="@font/fantasy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/modes_light"
        android:layout_width="48dp"
        android:layout_height="26dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="19dp"
        android:visibility="visible"
        android:background="@drawable/light_mode"
        app:layout_constraintStart_toEndOf="@id/player_name"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/modes_dark"
        android:layout_width="48dp"
        android:layout_height="26dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/dark_mode"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/player_name"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/calculator"
        android:layout_width="68dp"
        android:layout_height="67dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/event_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_name" />

    <ImageButton
        android:id="@+id/infrared"
        android:layout_width="66dp"
        android:layout_height="63dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/event_button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculator" />

    <ImageButton
        android:id="@+id/button1"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:background="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/fantasy"
        android:text="@string/inventory"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:background="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/fantasy"
        android:text="@string/shop"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button1" />

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:background="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/fantasy"
        android:text="@string/create"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button2" />

</androidx.constraintlayout.widget.ConstraintLayout>